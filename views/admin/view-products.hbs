<section>
    <div class="container">
        <div class="container">
  <div class="row">
    <div></div><div>
         <a type="button" href="/admin/add-products" class="btn btn-success ml-5">Add Products</a>

    </div>
    
    <div class="col-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th style="in" scope="col">No</th>
            <th scope="col">Title</th>
            {{!-- <th scope="col">Brand</th>
             <th scope="col">Category</th> --}}
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            
            <th scope="col">Image</th>
            <th scope="col">Control</th>

          </tr>
        </thead>
       
           
        <tbody>
            <div class="container">
                
            </div>
            
             {{#each products}}
          <tr>
            <td scope="row">{{indexing @index ../results.currentPage ../results.previous.limit}}</td>
            <td>{{this.name}}e</td>
            {{!-- <td>{{this.brand.brand}}</td>
           <td>{{this.category.category}}</td> --}}
            <td>{{this.description}}</td>
             <td>{{this.price}}</td>
              <td>{{this.stock}}</td>
              {{!-- <td>{{this.category}}</td> --}}
              
             <td><img style="width:50px; height:50px" src="/images/product/{{this.img.[0]}}"></td>


            <td>
          
              {{!-- <button type="button" href="/admin/edit-product/{{this._id}}" class="btn btn-primary"><i class="fas fa-edit">Edit</i></button> --}}
               {{!-- <a  href="/admin/edit-product/{{this._id}}" class="btn btn-danger" ><button onclick="return confirm(are you sure)">Edit</button></a> --}}
             <a href="/admin/edit-product/{{this._id}}" onclick="return confirm(are you sure)" class="btn btn-success">Edit</a>
               <a href="/admin/delete-product/{{this._id}}"  onclick="return confirm('Are you want to delete {{this.name}} ?')" class="btn btn-danger">delete</a>
             {{!-- <a  type="button" href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}} ?')"><button onclick="return confirm(are you sure)">delete</button></a> --}}
             </td
           
          </tr>
           {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
    </div>
    {{!-- //?????????????????????????????? --}}

    <ul class="pagination justify-content-center">


                                {{#ifEquals '1' results.currentPage }}
                                <li class="page-item disabled">
                                    <a class="page-link" href="/admin/products/?page={{../previous.page}}" tabindex="-1" aria-disabled="true">Previous</a>
                                </li>
                                {{else}}
                                 <li class="page-item ">
                                    <a class="page-link" href="/admin/products/?page={{../previous.page}}" tabindex="-1" aria-disabled="true">Previous</a>
                                </li>
                                {{/ifEquals}}
									{{#each results.pages}}
									{{#ifEquals ../currentPage this }}

                                <li class="page-item active"><a class="page-link" href="/admin/products/?page={{../this}}">{{../this}}</a></li>
                                {{else}}
                                   <li class="page-item active"><a class="page-link" href="/admin/products/?page={{../this}}">{{../this}}</a></li>
                                   {{/ifEquals}}
									{{/each}}
									{{#ifEquals results.pageCount results.currentPage }}
                              

                                <li class="page-item disabled">
                                    <a class="page-link" href="/admin/products/?page={{../next.page}}">Next</a>
                                </li>
                                {{else}}
                                  <li class="page-item">
                                    <a class="page-link" href="/admin/products/?page={{../next.page}}">Next</a>
                                </li>
                                {{/ifEquals}}







							</ul>







    {{!-- //???????????????????????????????????????? --}}


</section>
